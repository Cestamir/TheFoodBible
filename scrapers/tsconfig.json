{
  "compilerOptions": {
    // File Layout
    "module": "nodenext",
    "target": "esnext",

    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // âœ… Allow imports with .ts extensions
    "allowImportingTsExtensions": true,
    "noEmit": true,
  }
}